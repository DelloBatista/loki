apiVersion: v1
kind: Secret
metadata:
  name: loki-secrets
  namespace: loki-system
  labels:
    app.kubernetes.io/name: loki
    app.kubernetes.io/component: secrets
type: Opaque
stringData:
  # X/Twitter API Configuration
  X_CLIENT_ID: "your_x_client_id"
  X_CLIENT_SECRET: "your_x_client_secret"
  X_ACCESS_TOKEN: "your_x_access_token"
  X_ACCESS_TOKEN_SECRET: "your_x_access_token_secret"
  X_BEARER_TOKEN: "your_x_bearer_token"
  
  # GitHub Configuration
  GITHUB_TOKEN: "your_github_personal_access_token"
  GITHUB_REPO_OWNER: "your-username"
  GITHUB_REPO_NAME: "loki"
  
  # OpenAI Configuration (Optional)
  OPENAI_API_KEY: "your_openai_api_key"
  
  # Anthropic Configuration (Optional)
  ANTHROPIC_API_KEY: "your_anthropic_api_key"
  
  # Mistral Configuration (Optional)
  MISTRAL_API_KEY: "your_mistral_api_key"
  
  # Database Configuration
  POSTGRES_PASSWORD: "secure_password_here"
  
  # Additional API Keys
  REPLICATE_API_TOKEN: "your_replicate_token"
  HUGGINGFACE_API_KEY: "your_huggingface_key"

---
# Example of how to create secrets from command line:
# kubectl create secret generic loki-secrets \
#   --from-literal=X_CLIENT_ID="your_client_id" \
#   --from-literal=X_CLIENT_SECRET="your_client_secret" \
#   --from-literal=GITHUB_TOKEN="your_github_token" \
#   --namespace=loki-system 